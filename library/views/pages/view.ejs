<%- include('../port/layout-start', {title: title}) %>

<h1><%= title %></h1>
	<table class="table table-striped table-sm  mt-6">
		<thead>
			<tr>
				<th scope="col">title</th>
				<th scope="col">desc</th>
				<th scope="col">authors</th>
				<th scope="col">favorite</th>
				<th scope="col">fileCover</th>
				<th scope="col">fileName</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= lib.title %></td>
				<td><%= lib.desc %></td>
				<td><%= lib.authors %></td>
				<td><%= lib.favorite %></td>
				<td><%= lib.fileCover %></td>
				<td><%= lib.fileName %></td>
				<td class="text-right">
				<a class="btn btn-sm btn-primary" href="/books/update/<%= lib.id %>">
						<i class="fa fa-pencil" aria-hidden="true"></i>
				</a>
				<form action="/books/delete/<%= lib.id %>" method="POST" class="d-inline">
						<button class="btn btn-sm btn-danger">
								<i class="fa fa-trash" aria-hidden="true"></i>
						</button>
				</form>
				</td>
			</tr>
		</tbody>
	</table>
	<p>Всего просмотров: <%= counter %></p>

	<div class="row">
		<div class="col-4">
				<div id="list" class="list-group">
						<% lib.comments.map((el) => {  %>
								<div>
										<b><%= el.username %>:</b>
										<div><%= el.body %></div>
										<small><%= el.date %></small>
								</div>
								<br>
						<% }) %>
				</div>
		</div>
</div>
<form action="/books/<%= lib.id %>" method="POST">
		<div class="form-group mt-5">
				<label for="username">username</label>
				<input
								placeholder="username"
								type="text"
								id="username"
								class="form-control"
								name="username"
				>
		</div>
		<div class="form-group">
				<label for="body">body</label>
				<textarea
								placeholder="message"
								class="form-control"
								id="body"
								name="body"
				></textarea>
		</div>

		<button type="button" id="send-room" class="btn btn-primary">Комментировать</button>
</form>

	<script src="https://cdn.socket.io/4.5.0/socket.io.min.js"
		integrity="sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k"
		crossorigin="anonymous"></script>
	<script src="/socket.io/socket.io.js"> </script>

	<script>
	const roomName = location.pathname.split('/').pop()
	const socket = io.connect('/', {query: `roomName=${roomName}`})
	const boxList = document.querySelector('#list')
	const inputUserName = document.querySelector('#username')
	const inputBody = document.querySelector('#body')
	const sendRoom = document.querySelector('#send-room')
	const getTmp = (msg) => {
		return `
		<div class="row">
		<div class="col-4">
				<div id="list" class="list-group">
						<div>
										<b>${msg.username}:</b>
										<div>${msg.body}</div>
										<small>${msg.date}</small>
								</div>
								<br>
				</div>
		</div>
		</div>`;
		};

	socket.on('message-to-room', (msg) => {
		const div = getTmp(msg)
		boxList.insertAdjacentHTML('beforeend', div)
		inputUserName.value = ''
		inputBody.value = ''
})
sendRoom.addEventListener('click', () => {
	socket.emit('message-to-room', {
		username: inputUserName.value,
		body: inputBody.value,
	})
})
	</script>

<%- include('../port/layout-end') %>
